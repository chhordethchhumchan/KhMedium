@model IEnumerable<KhMedium.Entities.Tag>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List Tags</h1>
@Html.ActionLink("Create", "Create", "Tags", new { @Class = "btn btn-info" })
<br/>
<br/>
<table id="myTable">
    <thead>
    <tr>
        <th>No</th>
        <th >Name</th>
        <th style="width: 20%">Action</th>
    </tr>
    </thead>
    <tbody>
   @for (var i = 1; i <= Model.Count(); i++)
   {
       var tag = Model.ToList()[i-1];
       <tr>
           <td>@i</td>
           <td>@tag.Name</td>
           <td class="text-center">
               @Html.ActionLink("Edit", "Edits", new {id = tag.Id}, new {@class = "btn btn-warning"})
               @Html.ActionLink("Delete", "Delete", new {id = tag.Id}, new {@class = "btn btn-danger"})
           </td>
       </tr>
   }
    </tbody>
</table>


@Scripts.Render("~/bundles/jquery")
<script>
    $(document).ready(function() {
        $('#myTable').DataTable({
            "order": [[0, "asc"]]
        });
    });
</script>